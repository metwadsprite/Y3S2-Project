@model GASF.ApplicationLogic.Data.GroupsCourses
@using GASF.ApplicationLogic.Services;
@{
    ViewData["Title"] = "Create";
}
@inject GroupService GroupService;
@inject CourseService CourseService;
<h1>Create</h1>

<h4>GroupsCourses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select class="custom-select" asp-for="CourseId">
                    @foreach (var course in CourseService.GetAll())
                    {
                        <option value="@course.Id">@course.Name </option>
                    }
                </select>
                @*<select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>*@
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label"></label>
                <select class="custom-select" asp-for="GroupId">
                    @foreach (var group in GroupService.GetAll())
                    {
                        <option value="@group.GroupId">@group.GroupName </option>
                    }
                </select>
                @*<select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
