@using GASF.Models.Courses;
@model TeacherAddCourseViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Course</h1>
<hr />
<form asp-action="Create" method="post">

    <div class="row">
        <div class="col-2">
            Name
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Name" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            Description
        </div>
        <div class="col-10">
            <textarea class="form-control"
                      asp-for="Description">

                </textarea>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-5"></div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary">Save Course</button>
        </div>
    </div>
</form>
